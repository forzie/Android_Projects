<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.toshiba.studentrecord.Result">
<TextView
    android:id="@+id/txtName"
    android:layout_width="150dp"
    android:layout_height="50dp"
    android:layout_alignParentTop="true"
    android:layout_alignStart="@+id/txtCourse"
    android:layout_marginStart="200dp"
    android:layout_marginTop="100dp"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_alignLeft="@+id/txtCourse"
    android:layout_marginLeft="200dp" />
<TextView
    android:id="@+id/txtCourse"
    android:layout_width="150dp"
    android:layout_height="50dp"
    android:layout_alignParentEnd="true"
    android:layout_marginStart="200dp"
    android:layout_marginTop="200dp"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_alignParentRight="true"
    android:layout_marginLeft="200dp" />
<TextView
    android:id="@+id/txtMarks"
    android:layout_width="150dp"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    android:layout_alignStart="@+id/txtName"
    android:layout_marginStart="200dp"
    android:layout_marginTop="150dp"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_alignLeft="@+id/txtName"
    android:layout_marginLeft="200dp" />
<TextView
    android:id="@+id/txtSem"
    android:layout_width="150dp"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    android:layout_alignStart="@+id/txtName"
    android:layout_marginStart="200dp"
    android:layout_marginTop="250dp"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_alignLeft="@+id/txtName"
    android:layout_marginLeft="200dp" />

<TextView
    android:id="@+id/lblName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginStart="30dp"
    android:layout_marginTop="100dp"
    android:text="Name"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="30dp" />

<TextView
    android:id="@+id/lblMarks"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginStart="30dp"
    android:layout_marginTop="150dp"
    android:text="Marks"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginLeft="30dp" />

<TextView
    android:id="@+id/lblCourse"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_marginStart="30dp"
    android:layout_marginTop="200dp"
    android:text="Course"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginLeft="30dp" />

<TextView
    android:id="@+id/lblSem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/txtSem"
    android:layout_marginStart="30dp"
    android:layout_marginTop="250dp"
    android:text="Semester"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginLeft="30dp" />
<TextView
    android:id="@+id/lblLabel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginStart="40dp"
    android:layout_marginTop="16dp"
    android:fontFamily="serif-monospace"
    android:text="Student Profile"
    android:textSize="30sp"
    android:textStyle="bold|italic"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginLeft="40dp" />
</android.support.constraint.ConstraintLayout>
